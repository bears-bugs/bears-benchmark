<?xml version='1.0' encoding='UTF-8'?>
<!-- this SQ quality profile can be used with https://github.com/racodond/sonar-gherkin-plugin -->
<profile>
  <name>Bert Way</name>
  <language>gherkin</language>
  <rules>
    <rule>
      <repositoryKey>common-gherkin</repositoryKey>
      <key>DuplicatedBlocks</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>S1131</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>S1134</key>
      <priority>INFO</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>S1135</key>
      <priority>INFO</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>S1578</key>
      <priority>MINOR</priority>
      <parameters>
        <parameter>
          <key>format</key>
          <value>^[a-z][-A-Za-z0-9]*\.feature$</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>S2260</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>add-common-given-steps-to-background</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>all-step-types-in-scenario</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>allowed-tags</key>
      <priority>CRITICAL</priority>
      <parameters>
        <parameter>
          <key>allowedTags</key>
          <value>wip,SqApi62,SqApi56</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>bom-utf8-files</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>comment-convention</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>duplicated-feature-names</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>duplicated-scenario-names</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>duplicated-steps</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>empty-line-end-of-file</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>incomplete-examples-table</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>indentation</key>
      <priority>MINOR</priority>
      <parameters>
        <parameter>
          <key>indentation</key>
          <value>2</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>max-number-scenarios</key>
      <priority>MAJOR</priority>
      <parameters>
        <parameter>
          <key>threshold</key>
          <value>12</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>max-number-steps</key>
      <priority>MAJOR</priority>
      <parameters>
        <parameter>
          <key>threshold</key>
          <value>12</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>missing-data-table-column</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>missing-feature-description</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>missing-feature-name</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>missing-scenario-name</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>no-feature</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>no-scenario</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>no-step</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>no-tag-examples</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>one-single-when-per-scenario</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>only-given-steps-in-background</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>same-feature-language</key>
      <priority>MAJOR</priority>
      <parameters>
        <parameter>
          <key>language</key>
          <value>en</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>spelling</key>
      <priority>MAJOR</priority>
      <parameters>
        <parameter>
          <key>rulesToIgnore</key>
          <value>EN_QUOTES,WHITESPACE_RULE,MORFOLOGIK_RULE_EN_US,UPPERCASE_SENTENCE_START</value>
        </parameter>
        <parameter>
          <key>language</key>
          <value>en-US</value>
        </parameter>
        <parameter>
          <key>wordsToIgnore</key>
          <value>"""</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>star-step-prefix</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>step-of-unknown-type</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>step-sentence-length</key>
      <priority>MAJOR</priority>
      <parameters>
        <parameter>
          <key>threshold</key>
          <value>100</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>steps-right-order</key>
      <priority>CRITICAL</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>tab-character</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>tag-naming-convention</key>
      <priority>MINOR</priority>
      <parameters>
        <parameter>
          <key>format</key>
          <value>^[a-z][-a-z0-9]*$</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>tag-right-level</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>unused-variable</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>use-and-but</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>useless-tag</key>
      <priority>MINOR</priority>
      <parameters/>
    </rule>
    <rule>
      <repositoryKey>gherkin</repositoryKey>
      <key>wording-business-level</key>
      <priority>MAJOR</priority>
      <parameters/>
    </rule>
  </rules>
</profile>