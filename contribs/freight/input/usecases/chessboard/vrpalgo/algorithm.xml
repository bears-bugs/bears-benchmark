<?xml version="1.0" ?>

<algorithm xmlns="http://www.w3schools.com"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3schools.com algorithm_schema.xsd">

	<iterations>500</iterations>
	<prematureBreak basedOn="iterations">
		<iterations>100</iterations>
	</prematureBreak>
	
	<construction>
		<insertion name="bestInsertion">
				<level forwardLooking="3" memory="2">route</level>
		</insertion> 
	</construction>
	
	<strategy>
		<memory>1</memory>
		<searchStrategies>

			<searchStrategy name="randomRuinAndRecreate">
				<selector name="selectBest"/>
	  			<acceptor name="acceptNewRemoveWorst"/> 
				<modules>
					<module name="ruin_and_recreate">
						<ruin name="randomRuin">
							<share>0.3</share>
						</ruin>
						<insertion name="bestInsertion"/>
					</module>
					
				</modules>
				<probability>0.5</probability>
			</searchStrategy>
			
			<searchStrategy name="radialRuinAndRecreate">
				<selector name="selectBest"/>
				<acceptor name="acceptNewRemoveWorst"/> 
				<modules>
					<module name="ruin_and_recreate">
						<ruin name="radialRuin">
							<share>0.15</share>
							<distance>euclidean</distance>
						</ruin>
						<insertion name="bestInsertion"/>					
					</module>
					
				</modules>
				<probability>0.5</probability>
			</searchStrategy>
			
 			<searchStrategy name="startTimeRadial">
 				<selector name="selectBest"/> 
 				<acceptor name="acceptNewRemoveWorst"/>  
 				<modules> 
 					<module name="ruin_and_recreate"> 
 						<ruin id="1" name="radialRuin"> 
							<share>0.05</share> 
 							<distance>euclidean</distance> 
 						</ruin> 
 						<insertion id="1" name="bestInsertion">
 							<level forwardLooking="3" memory="2">route</level> 
 							<considerFixedCosts weight="0.5">true</considerFixedCosts>	
							<experimental timeSlice="450" neighboringSlices="3"/> 
						</insertion>						
 					</module> 
 				</modules>
 				<probability>0.0</probability>
			</searchStrategy>
			
			
		</searchStrategies>		
	</strategy>
	
</algorithm>
